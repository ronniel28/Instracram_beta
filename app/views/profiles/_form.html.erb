<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, :class => 'control-label col-lg-2' %>
    <%= form.text_field :first_name, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, :class => 'control-label col-lg-2' %>
    <%= form.text_field :last_name, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :birthday, :class => 'control-label col-lg-2' %>
    <%= form.text_field :birthday, :class => 'form-control' %>
  </div>

  <div class="form-group">
  <%= form.label :picture, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= form.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </div>
  <%=form.error_span(:picture) %>
</div>


<div class="form-group">
<div class="col-lg-offset-2 col-lg-10">
  <%= form.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            root_path, :class => 'btn btn-default' %>
</div>
</div>
<% end %>
